<div class="p-3">
  <div class="card h-100 product-card shadow-sm">
    <div class="card-body d-flex flex-column justify-content-around" id="card-body">
      <%= link_to show_fixed_income_path(fixed_income), class: "product-title text-center" do %>
        <h5 class="card-title max-lines-2"><%= fixed_income.entity %></h5>
      <% end %>
      <h5 class="card-title d-flex justify-content-center"> Renda Fixa </h5>
      <div class="d-flex justify-content-center">
        <%= link_to show_fixed_income_path(fixed_income), class: "btn btn-color w-50" do %>
          <span><strong><%= number_to_currency(fixed_income.value, :unit => "R$ ", :separator => ",", :delimiter => ".") %></strong></span>
        <% end %>
      </div>
    </div>
  </div>
</div>
