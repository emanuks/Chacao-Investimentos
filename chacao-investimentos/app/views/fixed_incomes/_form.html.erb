<%= form_with(model: fixed_income, local: true) do |form| %>
  <% if fixed_income.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fixed_income.errors.count, "error") %> prohibited this fixed_income from being saved:</h2>

      <ul>
        <% fixed_income.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="text-size">
    <div class="pt-5 form-row justify-content-around">
      <div class="form-group col-md-5">
        <%= form.label :entity, "Nome da Entidade Emissora" %>
        <%= form.text_field :entity, class: "form-control", required: true %>
      </div>
      <div class="form-group col-md-5">
        <%= form.label :category, "Classe" %>
        <%= form.select :category, options_for_select(["CDB", "LCA", "LCI", "LF", "LC"]), {}, class: "form-control", required: true %>
      </div>
    </div>

    <div class="pt-5 form-row justify-content-around">
      <div class="form-group col-md-5">
        <%= form.label :due_date, "Prazo de Vencimento" %>
        <%= form.number_field :due_date, {min: 0, class: "form-control", required: true} %>
      </div>

      <div class="form-group col-md-5">
        <%= form.label :tax, "Taxa de Remuneração (%)" %>
        <%= form.number_field :tax, {min: 0, step: 0.01, class: "form-control", required: true} %>
      </div>
    </div>

    <div class="pt-5 form-row justify-content-around">

      <div class="form-group col-md-5">
        <%= form.label :value, "Valor mínimo" %>
        <%= form.number_field :value, {min: 0, step: 0.01, class: "form-control", required: true} %>
      </div>

      <div class="form-group col-md-5">
        <%= form.label :time_limit, "Horário limite" %>
        <%= form.time_field :time_limit, class: "form-control", required: true %>
      </div>

    </div>

    <div class="form-row justify-content-center pt-5">
      <div class="pr-1">
        <%= form.submit "Criar", class: "btn btn-color" %>
      </div>
      <div class="pl-1">
        <%= link_to 'Voltar', products_path, class: "btn btn-color" %>
      </div>
    </div>
  </div>
<% end %>
