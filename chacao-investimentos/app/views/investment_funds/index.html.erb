<p id="notice"><%= notice %></p>

<h1>Investment Funds</h1>

<table>
  <thead>
    <tr>
      <th>Class</th>
      <th>Name</th>
      <th>Redemption period</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investment_funds.each do |investment_fund| %>
      <tr>
        <td><%= investment_fund.class %></td>
        <td><%= investment_fund.name %></td>
        <td><%= investment_fund.redemption_period %></td>
        <td><%= investment_fund.value %></td>
        <td><%= link_to 'Show', investment_fund %></td>
        <td><%= link_to 'Edit', edit_investment_fund_path(investment_fund) %></td>
        <td><%= link_to 'Destroy', investment_fund, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

