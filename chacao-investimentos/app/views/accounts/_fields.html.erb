<div class="form-row">
  <div class="form-group col">
    <%= f.label 'Código de Banco' %>
    <%= f.number_field :bank_code, {min: 0, max: 9999, class: 'form-control', required: true}  %>
  </div>
  <div class="form-group col">
    <%= f.label 'Agência' %>
    <%= f.number_field :agency, {min: 0, max: 9999, class: 'form-control', required: true}  %>
  </div>
</div>
<div class="form-group">
  <%= f.label 'Número' %>
  <%= f.number_field :number, {min: 0, maxlength: 20, class: 'form-control', required: true}  %>
</div>

<%= f.submit "Criar Conta", class: 'btn btn-color mt-4' %>

<%= f.hidden_field :account_type_id, value: 1  %>